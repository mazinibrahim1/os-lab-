	[child_page_table + i] = [PTBR + i];
	[child_page_table + i + 1] = [PTBR + i + 1];
	if(i>=4 && ([PTBR + i] != -1)) then
		[MEMORY_FREE_LIST + [PTBR + i]] = [MEMORY_FREE_LIST + [PTBR + i]] + 1;
	endif;

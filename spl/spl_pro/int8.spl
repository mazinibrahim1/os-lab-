i = 0;		//NOTE!!! both PAR and CHILD must have TWO STACK pages allocated by now
tmp = [PTBR + 16]*512;
while(i < 512) do
	if([PTBR + 16] != -1) then
		[[child_page_table + 16]*512 + i] = [tmp + i];
	endif;

	if([PTBR + 18] != -1) then
		[[child_page_table + 18]*512 + i] = [[PTBR + 18]*512 + i];
	endif;
i = i + 1;
endwhile;

//------------------DONE COPYING contents from PARENT_STACK to CHILD_STACK----------------------







